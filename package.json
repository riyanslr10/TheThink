{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "npm run development",
        "development": "vite",
        "watch": "vite --watch",
        "watch-poll": "vite --watch --watch-options-poll=1000",
        "hot": "vite --hmr",
        "serve": "vite preview",
        "build": "vite build",
        "optimize": "npm run build",
        "lint": "npm run format && npm run lint:js && npm run lint:css",
        "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,scss,html,vue}'",
        "lint:js": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
        "lint:css": "stylelint '**/*.{css,scss,html,vue}' --fix",
        "test": "phpunit",
        "test:fresh": "phpunit --testdox --colors=always --stop-on-failure"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.16",
        "axios": "^1.6.3",
        "flowbite": "^2.2.0",
        "laravel-vite-plugin": "^0.8.0",
        "postcss": "^8.4.32",
        "prettier": "^3.0.0-alpha.6",
        "tailwindcss": "^3.3.6",
        "vite": "^4.5.1"
    }
}

